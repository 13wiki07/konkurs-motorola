<Page x:Class="ArkanoEgo.CreatorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ArkanoEgo"
      mc:Ignorable="d" 
      d:DesignHeight="1030" d:DesignWidth="1920"
      Width="{x:Static SystemParameters.FullPrimaryScreenWidth}"
      Title="CreatorPage" Background="#454545">
    <Page.Resources>
        <LinearGradientBrush x:Key="mainGradientColor" GradientStops="{StaticResource gradientBlue}"/>

        <Style x:Key="valueLabel" TargetType="Label">
            <Setter Property="Foreground" Value="#cecece"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="20 0 0 0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="infoLabel" TargetType="Label">
            <Setter Property="Foreground" Value="WhiteSmoke"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Yu Gothic"/>
        </Style>

        <Style x:Key="tbox" TargetType="TextBox">
            <Setter Property="Foreground" Value="WhiteSmoke"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="6 0"/>
            <Setter Property="CaretBrush" Value="WhiteSmoke"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Name="border" CornerRadius="10" BorderThickness="2"
                                Background="#5a5a5a">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource mainGradientColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <EventSetter Event="PreviewTextInput" Handler="TextBoxes_PreviewTextInput"/>
            <EventSetter Event="KeyUp" Handler="TextBoxes_KeyUp"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.4*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <UniformGrid Columns="2" Height="320" Margin="30">
            <Button Background="#FFFFFF" Margin="20 0 0 0" BorderBrush="Transparent" Height="25" Width="45" Click="TemplateBtn_Click"/>
            <Button Background="#F8B34B" Margin="20 0 0 0" BorderBrush="Transparent" Height="25" Width="45" Click="TemplateBtn_Click"/>

            <Label Content="50" Style="{StaticResource valueLabel}"/>
            <Label Content="60" Style="{StaticResource valueLabel}"/>

            <Button Background="#6CD4C5" Margin="20 0 0 0" BorderBrush="Transparent" Height="25" Width="45" Click="TemplateBtn_Click"/>
            <Button Background="#98E677" Margin="20 0 0 0" BorderBrush="Transparent" Height="25" Width="45" Click="TemplateBtn_Click"/>

            <Label Content="70" Style="{StaticResource valueLabel}"/>
            <Label Content="80" Style="{StaticResource valueLabel}"/>

            <Button Background="#FD6B6B" Margin="20 0 0 0" BorderBrush="Transparent" Height="25" Width="45" Click="TemplateBtn_Click"/>
            <Button Background="#79A5F2" Margin="20 0 0 0" BorderBrush="Transparent" Height="25" Width="45" Click="TemplateBtn_Click"/>

            <Label Content="90"  Style="{StaticResource valueLabel}"/>
            <Label Content="100" Style="{StaticResource valueLabel}"/>

            <Button Background="#E5989B" Margin="20 0 0 0" BorderBrush="Transparent" Height="25" Width="45" Click="TemplateBtn_Click"/>
            <Button Background="#FFDC6C" Margin="20 0 0 0" BorderBrush="Transparent" Height="25" Width="45" Click="TemplateBtn_Click"/>

            <Label Content="110" Style="{StaticResource valueLabel}"/>
            <Label Content="120" Style="{StaticResource valueLabel}"/>

            <Button x:Name="silver" Background="#626161" Margin="20 0 0 0" BorderBrush="Transparent" Height="25" Width="45" Click="TemplateBtn_Click"/>
            <Button x:Name="gold"   Background="#C69245" Margin="20 0 0 0" BorderBrush="Transparent" Height="25" Width="45" Click="TemplateBtn_Click"/>

            <Label Content="50" Style="{StaticResource valueLabel}"/>
            <Label Content="0"  Style="{StaticResource valueLabel}"/>

        </UniformGrid>

        <StackPanel Grid.Column="2" VerticalAlignment="Center">
            <Border BorderBrush="{StaticResource mainGradientColor}" BorderThickness="3" CornerRadius="10" Margin="10">
                <StackPanel Margin="15 10">
                    <DockPanel LastChildFill="False">
                        <Label Content="Name" DockPanel.Dock="Left" Style="{StaticResource infoLabel}"/>
                        <Label Content="nmb of level and name file" Foreground="White" DockPanel.Dock="Right"/>
                    </DockPanel>
                    <DockPanel LastChildFill="False">
                        <Label Content="Blocks at this level" DockPanel.Dock="Left" Style="{StaticResource infoLabel}"/>
                        <Label Content="value" Foreground="White" DockPanel.Dock="Right"/>
                    </DockPanel>
                    <Label Content="Silver blocks:" DockPanel.Dock="Left" Style="{StaticResource infoLabel}"/>
                    <DockPanel LastChildFill="False">
                        <Label FontSize="14" Content="Value" DockPanel.Dock="Left" Style="{StaticResource infoLabel}"/>
                        <TextBox Text="0" MaxLength="4" DockPanel.Dock="Left" Style="{StaticResource tbox}" TextChanged="qwe"/>
                        <TextBox Text="0" MaxLength="4" DockPanel.Dock="Right" Style="{StaticResource tbox}"/>
                        <Label FontSize="14" Content="Times to break" DockPanel.Dock="Right" Style="{StaticResource infoLabel}"/>
                    </DockPanel>
                    <DockPanel LastChildFill="False">
                        <Label Content="Total points" DockPanel.Dock="Left" Style="{StaticResource infoLabel}"/>
                        <Label Content="value" Foreground="White" DockPanel.Dock="Right"/>
                    </DockPanel>
                </StackPanel>
            </Border>

            <Button Content="CLEAR MAP" Click="SaveLevel_Click"
                Style="{StaticResource btnStyle}" Height="60" FontSize="20"/>

            <Button Content="SAVE" Click="SaveLevel_Click"
                Style="{StaticResource btnStyle}" Height="60" FontSize="20"/>
        </StackPanel>
        <!-- 13 x 21 -->
        <Grid x:Name="gridCreator" Grid.Column="1" Margin="0 20" Height="693" Width="858">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
        </Grid>
    </Grid>
</Page>
