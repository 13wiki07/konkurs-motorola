<Page x:Class="ArkanoEgo.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ArkanoEgo"
      mc:Ignorable="d" 
      Height="{x:Static SystemParameters.FullPrimaryScreenHeight}" Width="1040"
      x:Name="windowPage"
      Title="GamePage">

    <Canvas Name="myCanvas" Height="{Binding ElementName=windowPage}" Width="{Binding ElementName=windowPage}" Background="LightBlue" Focusable="True" KeyDown="myCanvas_KeyDown" KeyUp="myCanvas_KeyUp">
        <Rectangle x:Name="player"  Height="10" Width="150" Fill="Red" Canvas.Left="435" Canvas.Top="783" HorizontalAlignment="Left" VerticalAlignment="Center" ></Rectangle>
        <Ellipse Tag="ballEclipse"  Height="10" Width="10" Fill="Blue" Canvas.Left="500" Canvas.Top="768"></Ellipse>
        <Label x:Name="testowyLabel" Visibility="Collapsed" FontSize="20" Content="aa" Canvas.Bottom="20"/>
        <Label x:Name="pointsLabel" FontSize="20" Content="Points: 0" Canvas.Bottom="0"/>
    </Canvas>
</Page>
