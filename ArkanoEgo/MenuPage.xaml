<Page x:Class="ArkanoEgo.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ArkanoEgo"
      mc:Ignorable="d" 
      
      d:DesignHeight="1000" d:DesignWidth="1920"
      Height="1000"
      Width="{x:Static SystemParameters.MaximizedPrimaryScreenWidth}"
      Title="MenuPage">
    <Page.Resources>
        <LinearGradientBrush x:Key="mainGradientColor" GradientStops="{StaticResource gradientOrange}"/>
    </Page.Resources>
    <Grid Background="#FF313131">
        <!--<Border Background="IndianRed" Grid.Column="1"/>-->
        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
            <Label Content="Arkanoego (logo)" FontSize="100" Margin="0 50"/>

            <Button Content="play" Click="Game_Click" Style="{StaticResource btnStyle}"/>
            <Button Content="options?" Style="{StaticResource btnStyle}"/>
            <Button Content="level creator" Click="Kreator_Click" Style="{StaticResource btnStyle}"/>
            <Button Content="gallery?" Style="{StaticResource btnStyle}"/>
            <Button Content="exit" Style="{StaticResource btnStyle}"/>
        </StackPanel>
    </Grid>
</Page>
