<Window x:Class="ArkanoEgo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArkanoEgo"
        mc:Ignorable="d"
        Width="1920" Height="1000"
        WindowState="Maximized"
        Title="ArkanoEgo" Background="#212735">
    <Window.Resources>
        <LinearGradientBrush x:Key="mainGradientColor" GradientStops="{StaticResource gradientViolet}"/>
    </Window.Resources>
    <Grid>
        <!-- frame potrzebne do GamePage itp -->
        <Frame x:Name="gridFrame"
               Source=".xaml" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
